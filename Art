  <script>
    // --- DATA PRODUK: edit di sini ---
    const products = [
      {
        id: 'p1',
        name: 'Papan Akrilik Laser Cut 30x30 cm',
        desc: 'Akrilik 3mm, potongan presisi untuk dekor & signage.',
        price: 45000,
        img: 'https://images.unsplash.com/photo-1581094271877-2b2f66a1fd1b?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=3c0f0b3b9f0d455b6d1fbbf5b3d1a4f0'
      },
      {
        id: 'p2',
        name: 'Jasa Potong Laser Plat Besi 1mm',
        desc: 'Presisi tinggi, sesuai layout file .dxf / .svg.',
        price: 25000,
        img: 'https://images.unsplash.com/photo-1616627566435-0f7b1d4d9c6c?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=0a2a5b4e974b6e2a2d23a7b3d8b6f8c9'
      },
      {
        id: 'p3',
        name: 'Bracket CNC Aluminium',
        desc: 'CNC milling, toleransi ketat, finishing halus.',
        price: 90000,
        img: 'https://images.unsplash.com/photo-1492684223066-81342ee5ff30?q=80&w=1200&auto=format&fit=crop&ixlib=rb-4.0.3&s=a5a27cfd3b4c4f9a9a0f2f1c2ea2d4a8'
      }
    ];

    // nomor WhatsApp pemilik toko (format internasional tanpa +, contoh: 6281234567890)
    const waNumber = '6285163164958';

    function formatRupiah(n){
      return 'Rp ' + n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.');
    }

    function createProductCard(p){
      const div = document.createElement('div');
      div.className = 'card';
      div.innerHTML = `
        <img class="thumb" src="${p.img}" alt="${p.name}" loading="lazy" />
        <div>
          <p class="title">${p.name}</p>
          <p class="desc">${p.desc}</p>
        </div>
        <div style="display:flex;align-items:center;justify-content:space-between;gap:10px">
          <div class="price">${formatRupiah(p.price)}</div>
        </div>
        <div class="actions">
          <button class="btn btn-order" data-id="${p.id}">Order via WhatsApp</button>
          <button class="btn btn-detail" data-id="${p.id}">Detail</button>
        </div>
      `;
      return div;
    }

    function init(){
      const wrap = document.getElementById('products');
      products.forEach(p => {
        const card = createProductCard(p);
        wrap.appendChild(card);
      });

      // event delegation
      wrap.addEventListener('click', (e) => {
        const orderBtn = e.target.closest('.btn-order');
        const detBtn = e.target.closest('.btn-detail');
        if(orderBtn){
          const id = orderBtn.getAttribute('data-id');
          const prod = products.find(x => x.id === id);
          const text = `Halo, saya mau order:%0A- Produk: ${encodeURIComponent(prod.name)}%0A- Harga: ${encodeURIComponent(formatRupiah(prod.price))}%0A- Jumlah: 1%0A- Alamat pengiriman: `;
          const url = `https://wa.me/${waNumber}?text=${text}`;
          window.open(url,'_blank');
        } else if(detBtn){
          const id = detBtn.getAttribute('data-id');
          const prod = products.find(x => x.id === id);
          alert(`${prod.name}\n\n${prod.desc}\n\nHarga: ${formatRupiah(prod.price)}`);
        }
      });
    }

    document.addEventListener('DOMContentLoaded', init);
  </script>
</body>
